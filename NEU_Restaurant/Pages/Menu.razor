@page "/Menu"

@inject IDishStorage _dishStorage

@if (!string.IsNullOrEmpty(_status))
{
	<div>@_status</div>
}

@foreach (var dish in _dishes)
{
	<NavLink href="@("/detail/" + dish.Id)">
	<span style="font-weight: bold; color: #0078d4" OnClick="()=>DirectToCounter()">@dish.Name</span>
	</NavLink>
	<div class="shim-xl"></div>
}

