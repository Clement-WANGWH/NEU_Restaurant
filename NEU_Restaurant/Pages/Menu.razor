@page "/Menu"

@inject IDishStorage _dishStorage

@if (!string.IsNullOrEmpty(_status))
{
    <div>@_status</div>
}
@foreach (var dish in _dishes)
{
    <Card>
        <BodyTemplate>
            <div style="display: flex; flex-wrap: wrap; width: 100%; height: 60px; margin-top: -8px;">
                <div style="width: 50%; font-size: 18px; font-weight: bold">@dish.Name</div>
                <div style="width: 50%;">
                    <img style="margin-left: 66px; width: 20px" src='https://s3.bmp.ovh/imgs/2023/11/17/088cf5496cab7978.png'>
                    <img style="margin-left: 10px; width: 20px;" src='https://s3.bmp.ovh/imgs/2023/11/17/56845382a4638100.png'>
                </div>

                <div style="width: 50%; font-size: 14px; margin-top: 4px;">@dish.Canteen</div>
                <div style="width: 50%; font-size: 14px; margin-top: 4px; margin-left: -50px; color: gray">@dish.Stall</div>
            </div>
        </BodyTemplate>
    </Card>
    <div style="height: 8px;"></div>
}