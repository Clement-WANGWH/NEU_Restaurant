@page "/detail/{DishId:int}"

@if (Dish != null)
{
    <img src="@Dish.Image" width="100%" style="margin:0px 0px;" alt="图片描述" />
    <div style="width: 90%; border-radius: 25px; background-color: yellow; position: absolute; left: 50%; transform: translateX(-50%); ">
        <h1>@Dish.Name</h1>
        <h2>食堂：@Dish.Canteen</h2>
        <h2>店面：@Dish.Stall</h2>
        <h2>价格: @Dish.Price</h2>
        <h2>风味：@Dish.Flavor</h2>
        <h2>食材：@Dish.Ingredient</h2>
    </div>
}
else
{
    <p>Loading...</p>
}

@code {
    [Parameter]
    public int DishId { get; set; }
}